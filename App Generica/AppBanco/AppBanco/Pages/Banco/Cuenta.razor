@page "/Cuenta"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
<h3 class="mb-4">Gestion de Cuentas</h3>
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionCuentas">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Registrar Tipo Cuenta
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@tipo" OnValidSubmit="RegistrarTipoCuenta" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo Cuenta</label>
                            <InputText class="form-control" @bind-Value="tipo.tipocuenta" />
                            <ValidationMessage For="@(() => tipo.tipocuenta)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sobregiro</label>
                            <InputSelect class="form-select" @bind-Value="tipo.sobregiro">
                                <option selected disabled>-- Selecciona --</option>
                                <option value=0>No</option>
                                <option value=1>Si</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => tipo.sobregiro)" class="text-danger" />
                        </div>
                        @* <div class="col-md-6 mb-3">
                            <label class="form-label">Sobregiro</label>
                            <InputNumber class="form-control" @bind-Value="tipo.sobregiro" />
                            <ValidationMessage For="@(() => tipo.sobregiro)" class="text-danger" />
                        </div> *@
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRegistradas" aria-expanded="false" aria-controls="collapseTwo" @onclick="TipoCuentasRegistradas">
                Tipos de Cuentas Registradas
            </button>
        </h2>
        <div id="collapseRegistradas" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (tipocuentas is not null && tipocuentas.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Codigo</th>
                                <th>Tipo de Cuenta</th>
                                <th>Sobregiro</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in tipocuentas)
                            {
                                <tr>
                                    <td>@item.idtipocuenta</td>
                                    <td>@item.tipocuenta</td>
                                    <td>@item.sobregiro</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay ciudades registradas aún.</p>
                }
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Nueva Cuenta
            </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <EditForm Model="@cuenta" OnValidSubmit="RegistrarCuenta" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Numero</label>
                            <InputText class="form-control" @bind-Value="cuenta.numero" />
                            <ValidationMessage For="@(() => cuenta.numero)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo Cuenta</label>
                            <InputSelect @bind-Value="cuenta.idtipocuenta" class="form-control">
                                <option selected disabled>-- Selecciona --</option>
                                @foreach (var item in tipocuentas)
                                {
                                    <option value=@item.idtipocuenta>@item.idtipocuenta - @item.tipocuenta</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sucursal</label>
                            <InputSelect @bind-Value="cuenta.idSucursal" class="form-control">
                                <option selected disabled>-- Selecciona --</option>
                                @foreach (var item in sucursales)
                                {
                                    <option value=@item.idSucursal>@item.idSucursal - @item.sucursal</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Saldo</label>
                            <InputNumber @bind-Value="cuenta.saldo" class="form-control" />
                            <ValidationMessage For="@(() => cuenta.saldo)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sobregiro</label>
                            <InputNumber @bind-Value="cuenta.sobregiro" class="form-control" />
                            <ValidationMessage For="@(() => cuenta.sobregiro)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Gran Movimiento</label>
                            <InputNumber @bind-Value="cuenta.granmovimiento" class="form-control" />
                            <ValidationMessage For="@(() => cuenta.granmovimiento)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sobregiro No Autorizado</label>
                            <InputNumber @bind-Value="cuenta.sobregironoautorizado" class="form-control" />
                            <ValidationMessage For="@(() => cuenta.sobregironoautorizado)" class="text-danger" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseTwo" @onclick="CuentasRegistradas">
                Cuentas Registradas
            </button>
        </h2>
        <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (cuentas is not null && cuentas.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Codigo</th>
                                <th>Numero</th>
                                <th>Fecha Apertura</th>
                                <th>Tipo de Cuenta</th>
                                <th>Sucursal</th>
                                <th>Saldo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in cuentas)
                            {
                                <tr>
                                    <td>@item.idcuenta</td>
                                    <td>@item.numero</td>
                                    <td>@item.fechaApertura</td>
                                    <td>@item.tipocuenta</td>
                                    <td>@item.sucursal</td>
                                    <td>@item.saldo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay Cuentas registradas aún.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private tipoCuentaModel tipo = new();
    private CuentaModel cuenta = new();
    private SucursalModel sucursal = new();
    private List<SucursalModel> sucursales = new();
    private List<tipoCuentaModel> tipocuentas = new();
    private List<CuentaModel> cuentas = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        tipocuentas = await Http.GetFromJsonAsync<List<tipoCuentaModel>>("http://localhost:3000/api/banco/tipocuentas");
        sucursales = await Http.GetFromJsonAsync<List<SucursalModel>>("http://localhost:3000/api/banco/sucursales");
        cuentas = await Http.GetFromJsonAsync<List<CuentaModel>>("http://localhost:3000/api/banco/cuentas");
    }
    private async Task RegistrarTipoCuenta()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/tipocuenta", tipo);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Tipo Cuenta registrada exitosamente!";
            tipo = new();
        }
        else
        {
            mensaje = "Error al registrar tipo cuenta.";
        }
    }
    private async Task TipoCuentasRegistradas()
    {
        try
        {
            tipocuentas = await Http.GetFromJsonAsync<List<tipoCuentaModel>>("http://localhost:3000/api/banco/tipocuentas") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener tipo cuentas: {ex.Message}");
        }
    }
    private async Task RegistrarCuenta()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/cuenta", cuenta);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Cuenta registrada exitosamente!";
            tipo = new();
        }
        else
        {
            mensaje = "Error al registrar cuenta.";
        }
    }
    private async Task CuentasRegistradas()
    {
        try
        {
            cuentas = await Http.GetFromJsonAsync<List<CuentaModel>>("http://localhost:3000/api/banco/cuentas") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener cuentas: {ex.Message}");
        }
    }
}