@page "/TipoMovimiento"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
<h3 class="mb-4">Registrar Tipo Movimiento</h3>
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionTipoMovimiento">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Registrar Tipo Movimiento
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@tipomovimiento" OnValidSubmit="RegistrarTipoMovimiento" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo Movimiento</label>
                            <InputText class="form-control" @bind-Value="tipomovimiento.tipomovimiento" />
                            <ValidationMessage For="@(() => tipomovimiento.tipomovimiento)" class="text-danger" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscritos" aria-expanded="false" aria-controls="collapseTwo" @onclick="TiposMovimientoRegistrados">
                Tipos de Movimiento Registrados
            </button>
        </h2>
        <div id="collapseInscritos" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (tiposmovimiento is not null && tiposmovimiento.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Codigo</th>
                                <th>Tipo Movimiento</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in tiposmovimiento)
                            {
                                <tr>
                                    <td>@item.idtipomovimiento</td>
                                    <td>@item.tipomovimiento</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay tipos de movimiento registrados aún.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private TipoMovimientoModel tipomovimiento = new();
    private List<TipoMovimientoModel> tiposmovimiento = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        tiposmovimiento = await Http.GetFromJsonAsync<List<TipoMovimientoModel>>("http://localhost:3000/api/banco/tipomovimientos") ?? new();
    }
    private async Task RegistrarTipoMovimiento()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/tipomovimiento", tipomovimiento);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Tipo Movimiento registrado exitosamente!";
            tipomovimiento = new();
        }
        else
        {
            mensaje = "Error al registrar tipo movimiento.";
        }
    }
    private async Task TiposMovimientoRegistrados()
    {
        try
        {
            tiposmovimiento = await Http.GetFromJsonAsync<List<TipoMovimientoModel>>("http://localhost:3000/api/banco/tipomovimientos") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener tipos de movimiento: {ex.Message}");
        }
    }
}

