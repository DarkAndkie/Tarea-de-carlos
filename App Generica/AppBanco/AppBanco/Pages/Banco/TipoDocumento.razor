@page "/TipoDocumento"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
<h3 class="mb-4">Registrar Tipo Documento</h3>
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionTipoDocumento">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Registrar Tipo Documento
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@tipodocumento" OnValidSubmit="RegistrarTipoDocumento" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo Documento</label>
                            <InputText class="form-control" @bind-Value="tipodocumento.tipodocumento" />
                            <ValidationMessage For="@(() => tipodocumento.tipodocumento)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sigla</label>
                            <InputText class="form-control" @bind-Value="tipodocumento.sigla" />
                            <ValidationMessage For="@(() => tipodocumento.sigla)" class="text-danger" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscritos" aria-expanded="false" aria-controls="collapseTwo" @onclick="TiposDocumentoRegistrados">
                Tipos de Documento Registrados
            </button>
        </h2>
        <div id="collapseInscritos" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (tiposdocumento is not null && tiposdocumento.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Codigo</th>
                                <th>Tipo Documento</th>
                                <th>Sigla</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in tiposdocumento)
                            {
                                <tr>
                                    <td>@item.idtipodocumento</td>
                                    <td>@item.tipodocumento</td>
                                    <td>@item.sigla</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay tipos de documento registrados aún.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private TipoDocumentoModel tipodocumento = new();
    private List<TipoDocumentoModel> tiposdocumento = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        tiposdocumento = await Http.GetFromJsonAsync<List<TipoDocumentoModel>>("http://localhost:3000/api/banco/tipodocumentos") ?? new();
    }
    private async Task RegistrarTipoDocumento()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/tipodocumento", tipodocumento);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Tipo Documento registrado exitosamente!";
            tipodocumento = new();
        }
        else
        {
            mensaje = "Error al registrar tipo documento.";
        }
    }
    private async Task TiposDocumentoRegistrados()
    {
        try
        {
            tiposdocumento = await Http.GetFromJsonAsync<List<TipoDocumentoModel>>("http://localhost:3000/api/banco/tipodocumentos") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener tipos de documento: {ex.Message}");
        }
    }
}

