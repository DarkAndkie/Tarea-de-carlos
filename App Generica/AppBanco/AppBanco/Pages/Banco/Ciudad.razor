@page "/Ciudad"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
<h3 class="mb-4">Registrar Ciudades</h3>
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionUniversidades">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Registrar Ciudad
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@ciudad" OnValidSubmit="RegistrarCiudad" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ciudad</label>
                            <InputText class="form-control" @bind-Value="ciudad.ciudad" />
                            <ValidationMessage For="@(() => ciudad.ciudad)" class="text-danger" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscritos" aria-expanded="false" aria-controls="collapseTwo" @onclick="CiudadesRegistradas">
                Ciudades Registradas
            </button>
        </h2>
        <div id="collapseInscritos" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (ciudadesregistradas is not null && ciudadesregistradas.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Codigo</th>
                                <th>Ciudad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ciudadesregistradas)
                            {
                                <tr>
                                    <td>@item.idciudad</td>
                                    <td>@item.ciudad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay ciudades registradas aún.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private CiudadModel ciudad = new();
    private List<CiudadModel> ciudades = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        ciudades = await Http.GetFromJsonAsync<List<CiudadModel>>("http://localhost:3000/api/banco");
    }
    private async Task RegistrarCiudad()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco", ciudad);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Ciudad registrada exitosamente!";
            ciudad = new();
        }
        else
        {
            mensaje = "Error al registrar ciudad.";
        }
    }
    private List<CiudadModel> ciudadesregistradas = new();
    private async Task CiudadesRegistradas()
    {
        try
        {
            ciudadesregistradas = await Http.GetFromJsonAsync<List<CiudadModel>>("http://localhost:3000/api/banco") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener ciudades: {ex.Message}");
        }
    }
}