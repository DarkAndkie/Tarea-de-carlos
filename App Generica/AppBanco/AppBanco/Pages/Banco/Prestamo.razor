@page "/Prestamo"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
<h3 class="mb-4">Registrar Prestamo</h3>
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionUniversidades">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Nuevo Prestamo
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@prestamo" OnValidSubmit="RegistrarPrestamo" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cuenta</label>
                            <InputSelect @bind-Value="prestamo.idcuenta" class="form-control">
                                <option selected disabled>-- Selecciona Cuenta--</option>
                                @foreach (var item in cuentas)
                                {
                                    <option value=@item.idcuenta>@item.idcuenta - @item.numero</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Número</label>
                            <InputText @bind-Value="prestamo.numero" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Valor</label>
                            <InputNumber @bind-Value="prestamo.valor" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Interés</label>
                            <InputNumber @bind-Value="prestamo.intereses" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Plazo</label>
                            <InputNumber @bind-Value="prestamo.plazo" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Seguro</label>
                            <InputNumber @bind-Value="prestamo.seguro" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cuota</label>
                            <InputNumber @bind-Value="prestamo.cuota" class="form-control" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscritos" aria-expanded="false" aria-controls="collapseTwo" @onclick="PrestamosRegistrados">
                Prestamos Registrados
            </button>
        </h2>
        <div id="collapseInscritos" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (cuentas is not null && cuentas.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Numero</th>
                                <th>Fecha Prestamo</th>
                                <th>Valor</th>
                                <th>Interes</th>
                                <th>Plazo</th>
                                <th>Seguro</th>
                                <th>Cuota</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in prestamos)
                            {
                                <tr>
                                    <td>@item.numero</td>
                                    <td>@item.fecha</td>
                                    <td>@item.valor</td>
                                    <td>@item.intereses</td>
                                    <td>@item.plazo</td>
                                    <td>@item.seguro</td>
                                    <td>@item.cuota</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay ciudades registradas aún.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private PrestamoModel prestamo = new();
    private List<PrestamoModel> prestamos = new();
    private List<CuentaModel> cuentas = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        prestamos = await Http.GetFromJsonAsync<List<PrestamoModel>>("http://localhost:3000/api/banco/prestamos") ?? new();
        cuentas = await Http.GetFromJsonAsync<List<CuentaModel>>("http://localhost:3000/api/banco/cuentas") ?? new();

    }
    private async Task RegistrarPrestamo()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/prestamo", prestamo);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Prestamo registrado exitosamente!";
            prestamo = new();
        }
        else
        {
            mensaje = "Error al registrar sucursal.";
        }
    }
    private async Task PrestamosRegistrados()
    {
        try
        {
            prestamos = await Http.GetFromJsonAsync<List<PrestamoModel>>("http://localhost:3000/api/banco/prestamos") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener prestamos: {ex.Message}");
        }
    }
}