@page "/tiposucursal"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionInscripciones">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Registrar Tipo Sucursal
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@tipo" OnValidSubmit="RegistrarTipoSucursal" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        @* <div class="col-md-6 mb-3">
                            <InputSelect class="form-select" @bind-Value="tipo.tipoSucursal">
                                <option value="">--- Seleccione Tipo Sucursal ---</option>
                                <option value="Principal">Principal</option>
                                <option value="Media">Media</option>
                                <option value="Menor">Menor</option>
                                <option value="Satelite">Satelite</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => tipo.tipoSucursal)" class="text-danger" />
                        </div> *@
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo Sucursal</label>
                            <InputText class="form-control" @bind-Value="tipo.tipoSucursal" />
                            <ValidationMessage For="@(() => tipo.tipoSucursal)" class="text-danger" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar Tipo Sucursal</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscritos" aria-expanded="false" aria-controls="collapseTwo" @onclick="TipoSucursalesRegistradas">
                Ciudades Registradas
            </button>
        </h2>
        <div id="collapseInscritos" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (tiposucursalesregistradas is not null && tiposucursalesregistradas.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Codigo</th>
                                <th>Tipo Sucursal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in tiposucursalesregistradas)
                            {
                                <tr>
                                    <td>@item.idtiposucursal</td>
                                    <td>@item.tipoSucursal</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay sucursales registradas aun.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private TipoSucursalModel tipo = new();
    private List<TipoSucursalModel> tipos = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        tipos = await Http.GetFromJsonAsync<List<TipoSucursalModel>>("http://localhost:3000/api/banco");
    }
    private async Task RegistrarTipoSucursal()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/tipo", tipo);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Tipo Sucursal registrada exitosamente!";
            tipo = new();
        }
        else
        {
            mensaje = "Error al registrar tipo sucursal.";
        }
    }
    private List<TipoSucursalModel> tiposucursalesregistradas = new();
    private async Task TipoSucursalesRegistradas()
    {
        try
        {
            tiposucursalesregistradas = await Http.GetFromJsonAsync<List<TipoSucursalModel>>("http://localhost:3000/api/banco/tipos") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener tipo sucursal: {ex.Message}");
        }
    }
}