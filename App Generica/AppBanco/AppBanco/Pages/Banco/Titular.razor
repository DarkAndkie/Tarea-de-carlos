@page "/Titular"
@using System.ComponentModel.DataAnnotations
@using Data
@inject HttpClient Http
<h3 class="mb-4">Registrar Titular</h3>
@if (mensaje != null)
{
    <div class="alert alert-success mt-4">@mensaje</div>
}
<div class="accordion" id="accordionTitular">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscribir" aria-expanded="true">
                Registrar Titular
            </button>
        </h2>
        <div id="collapseInscribir" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <EditForm Model="@titular" OnValidSubmit="RegistrarTitular" class="needs-validation">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cuenta</label>
                            <InputSelect @bind-Value="titular.idcuenta" class="form-control">
                                <option selected disabled>-- Selecciona Cuenta--</option>
                                @foreach (var item in cuentas)
                                {
                                    <option value=@item.idcuenta>@item.idcuenta - @item.numero</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => titular.idcuenta)" class="text-danger" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cuentahabiente</label>
                            <InputSelect @bind-Value="titular.idcuentahabiente" class="form-control">
                                <option selected disabled>-- Selecciona Cuentahabiente--</option>
                                @foreach (var item in cuentahabientes)
                                {
                                    <option value=@item.idcuentahabiente>@item.idcuentahabiente - @item.nombre (@item.documento)</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => titular.idcuentahabiente)" class="text-danger" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Registrar</button>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInscritos" aria-expanded="false" aria-controls="collapseTwo" @onclick="TitularesRegistrados">
                Titulares Registrados
            </button>
        </h2>
        <div id="collapseInscritos" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                @if (titulares is not null && titulares.Any())
                {
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Codigo Cuenta</th>
                                <th>Numero Cuenta</th>
                                <th>Codigo Cuentahabiente</th>
                                <th>Nombre Cuentahabiente</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in titulares)
                            {
                                <tr>
                                    <td>@item.idcuenta</td>
                                    <td>@item.numeroCuenta</td>
                                    <td>@item.idcuentahabiente</td>
                                    <td>@item.nombreCuentahabiente</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No hay titulares registrados aún.</p>
                }
            </div>
        </div>
    </div>
</div>
@code {
    private TitularModel titular = new();
    private List<TitularModel> titulares = new();
    private List<CuentaModel> cuentas = new();
    private List<CuentahabienteModel> cuentahabientes = new();
    private string? mensaje;
    protected override async Task OnInitializedAsync()
    {
        cuentas = await Http.GetFromJsonAsync<List<CuentaModel>>("http://localhost:3000/api/banco/cuentas") ?? new();
        cuentahabientes = await Http.GetFromJsonAsync<List<CuentahabienteModel>>("http://localhost:3000/api/banco/cuentahabientes") ?? new();
    }
    private async Task RegistrarTitular()
    {
        var response = await Http.PostAsJsonAsync("http://localhost:3000/api/banco/titular", titular);
        if (response.IsSuccessStatusCode)
        {
            mensaje = "¡Titular registrado exitosamente!";
            titular = new();
        }
        else
        {
            mensaje = "Error al registrar titular.";
        }
    }
    private async Task TitularesRegistrados()
    {
        try
        {
            titulares = await Http.GetFromJsonAsync<List<TitularModel>>("http://localhost:3000/api/banco/titulares") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener titulares: {ex.Message}");
        }
    }
}

